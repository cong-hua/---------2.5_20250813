{
  "manifest_version": 3,
  "name": "小红书助手",
  "version": "1.0",
  "description": "自动发布小红书内容",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "fileSystem",
    "background",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["popup.html"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 